<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.socratesdiaz.flickrbrowser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Flickr2">
        <activity android:name="com.socratesdiaz.flickrbrowser.views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName="com.socratesdiaz.flickrbrowser.views.MainActivity"
            android:theme="@style/AppTheme.Flickr2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.socratesdiaz.flickrbrowser.views.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".views.ViewPhotoDetailsActivity"
            android:label="@string/title_activity_view_photo_details"
            android:parentActivityName="com.socratesdiaz.flickrbrowser.views.MainActivity"
            android:theme="@style/AppTheme.Flickr2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.socratesdiaz.flickrbrowser.views.MainActivity" />
        </activity>
    </application>

</manifest>